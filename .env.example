# Shear App Configuration
# Copy this file to .env and modify the values

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# PowerApp Dataverse Webhook Configuration
POWERAPP_WEBHOOK_URL=https://your-powerapp-webhook-url.com
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# Optional: Authentication for webhook
# WEBHOOK_AUTH_TYPE=bearer|api_key|basic
# WEBHOOK_TOKEN=your-bearer-token
# WEBHOOK_API_KEY=your-api-key
# WEBHOOK_API_KEY_HEADER=X-API-Key
# WEBHOOK_USERNAME=username
# WEBHOOK_PASSWORD=password

# Card Reader Configuration (optional - will auto-detect if not specified)
# CARD_READER_VENDOR_ID=0x1234
# CARD_READER_PRODUCT_ID=0x5678

# LabJack U3 Configuration (optional - will auto-detect if not specified)
# LABJACK_CONNECTION_TYPE=USB  # USB or ETHERNET
# LABJACK_SERIAL_NUMBER=      # Specific U3 serial number if you have multiple

# Server Identification
ACCESS_POINT_NAME=shear-app-server
ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=shear_app.log
